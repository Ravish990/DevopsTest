pipeline {
    agent any
    tools {
        maven 'maven'
        
        
    }
    stages {
        stage('Git Checkout') {
            steps {
                echo 'Performing Git Checkout'
            }
        }
        stage('Build') {
            steps {
                echo 'Building'
                bat 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing'
                bat 'mvn test' 
            }
        }
        stage('Deliver') {
            steps {
                echo 'Delivering'
                bat './scripts/deliver.sh'
            }
        }
        
    }
}