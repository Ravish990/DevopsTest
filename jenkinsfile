pipeline {
    agent any
    
    tools {
        maven 'Maven'
        jdk 'JDK'
    }
    
    stages {
        stage('Build') {
            steps {
                bat 'mvn -B -DskipTests clean package'
            }
        }
        stage('Test') {
            steps {
               bat 'mvn test'
            }
        }
        stage('Deliver') {
            steps {
                // sh 'chmod +x scripts/deliver.sh'
                bat './scripts/deliver.sh'
            }
        }
    }
}